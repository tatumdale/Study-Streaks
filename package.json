  "version": "0.1.0",
  "description": "Study Streaks - UK Educational Platform for Homework Motivation",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "nx run-many --target=dev --parallel=3",
    "dev:web": "nx dev web",
    "dev:admin": "nx dev admin",
    "dev:api": "nx dev api",
    "build": "nx run-many --target=build --parallel=3",
    "build:web": "nx build web",
    "test": "nx run-many --target=test --parallel=3",
    "test:watch": "nx run-many --target=test --parallel=3 --watch",
    "test:coverage": "nx run-many --target=test --parallel=3 --coverage",
    "e2e": "nx e2e web-e2e",
    "lint": "nx run-many --target=lint --parallel=3",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mdx}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,mdx}\"",
    "typecheck": "nx run-many --target=typecheck --parallel=3",
    "affected:build": "nx affected:build",
    "affected:test": "nx affected:test",
    "affected:lint": "nx affected:lint",
    "graph": "nx graph",
    "db:generate": "nx run database:db:generate",
    "db:push": "nx run database:db:push",
    "db:migrate": "nx run database:db:migrate",
    "db:seed": "nx run database:db:seed",
    "db:studio": "nx run database:db:studio",
    "docker:up": "docker-compose -f infrastructure/docker/development/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infrastructure/docker/development/docker-compose.yml down",
    "docker:logs": "docker-compose -f infrastructure/docker/development/docker-compose.yml logs -f",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "clean": "nx reset && rm -rf node_modules .nx tmp dist .next out",
    "approve-builds": "pnpm approve-builds",
    "git:cleanup": "./scripts/git-cleanup.sh",
    "git:cleanup:dry": "./scripts/git-cleanup.sh --dry-run",
    "git:status": "git status && git branch -v",
    "release:patch": "npm version patch && git push origin --tags",
    "release:minor": "npm version minor && git push origin --tags",
    "release:major": "npm version major && git push origin --tags"
  },
